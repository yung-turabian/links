class Eq : (a::Base) {
		sig == : (a,a) -> Bool;
}

fun showBool(b) {
		switch(b) {
				case true -> "true"
				case false -> "false"
		}
}

op x `boolEq` y {
		switch ((x, y)) {
				case (true, true) -> true
				case (false, false) -> true
				case other -> false
		}	
}

instance Eq : Bool {
		x == y : x `boolEq` y;
}

